@import nib
@import url('http://fonts.googleapis.com/css?family=Dosis')
myfonts = Dosis,Helvetica,Arial,sans-serif

// bgImage = '../images/white_tiles.png'
// bgImage = '../images/navy_blue.png'
// bgImage = '../images/clean_textile.png'
bgImage = '../images/brillant.png'

break-word()
  word-wrap break-word

clear()
  clear both

hide()
  display none

zuruiLine(alpha1 = 0.1, alpha2 = 1.0)
  border-bottom 1px solid rgba(0,0,0,alpha1)
  box-shadow rgba(255,255,255,alpha2) 0 1px 0px

html
button
input
select
textarea
  color #222

body
  font-family myfonts
  font-size 16px/26px
  line-height 1.4
  color black
  background-color #EEE
  background-image url(bgImage)
  margin-top 40px
  margin-left 20px
  break-word()

article header h2
  color #4682b4
  margin-bottom 5px
  zuruiLine()

article header h2:hover
  text-shadow 2px 2px 0px #c0c0c0

.wrapper
  width 90%
  margin 0 5%

a
  cursor auto
  text-decoration none

a:hover
  color blue

a:visited
  color green

.link
  padding 1px
  font-size 12px
  background-color orange
  width 80px
  height 80px
  border inherit
  border-radius 5px 5px 5px 5px
  box-shadow 3px 3px 10px #c0c0c0

::selection
    background #b3d4fc
    text-shadow none

.break-word
  break-word()

.floatLeft
  float left

.clear
  clear()

.display-none
  hide()

.chromeframe
  top 0
  left 0
  width 100%
  text-align center
  background #ccc
  color #000
  padding 0.2em 0
  position absolute

.focus
  border thin #eeeeee solid
  border-color rgba(82, 168, 236, 0.8)
  outline 0
  outline thin dotted \9
  box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.075), 0 0 8px rgba(82, 168, 236, 0.6)

hr-soften()
  height 1px
  background-image linear-gradient(left, rgba(0,0,1,0.5), rgba(0,0,1,0.1), rgba(0,0,0,0))
  border 0

hr.soften
  hr-soften()

hr.margin
  margin-top 20px

footer p
  margin-bottom 0em

img
  vertical-align middle

.small
  font-size 50%

.badge img
  width 80px
  height 80px

.tooltip
  background-color black
  color white
  position absolute
  z-index 1030
  display block
  font-size 11px
  opacity 0.8
  visibility visible
  margin-top 3px
  max-width 200px
  padding 3px 8px
  text-align center
  text-decoration none
  border-radius 4px

.badges
  width 80%

.iframe_content
  width 280px
  margin-left 20px

.mongo_cert
  width 150px
  height 105px

.coursera_cert
  width 105px
  height 150px

#welcome iframe
  position relative
  top 6px

/* Large desktop */
@media (min-width: 1200px)
  .display-none
    hide()

/* Portrait tablet to landscape and desktop */
@media (min-width: 768px) and (max-width: 979px)
  .display-none
    hide()

/* Landscape phone to portrait tablet */
@media (max-width: 767px)
  .display-none
    hide()

/* Landscape phones and down */
@media (max-width: 480px)
  .display-none
    hide()

@media print
  *
    background transparent !important
    color #000 !important
    box-shadow none !important
    text-shadow  none !important

  a
  a:visited
    text-decoration underline

  a[href]:after
    content " (" attr(href) ")"
